<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers </th>
      <th> total ratings </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.count %></td>
        <td><%= user.ratings.count %></td>
        <% if user.cold %>
        <td><button type="button " class="btn btn-danger btn-xs" disabled="disabled">account frozen</button></td>
      <% end %>
            </tr>
    <% end %>
  </tbody>
</table>


