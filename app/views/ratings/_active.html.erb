<h3>Most active <%= name %></h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>favorite beer</th>
    <th>favorite style</th>
    <th>favorite brewery</th>
    <th>ratings</th>
  </tr>
  </thead>

  <tbody>
  <% active.each do |t| %>
  <tr>
        <td> <%= link_to t.username, t%></td>
        <% if t.ratings.count > 0 %>
            <td> <%= t.favorite_beer.name %></td>
            <td> <%= t.favorite_beer_style %></td>
            <td> <%= t.favorite_brewery.name %></td>
            <td> <%= t.ratings.count %></td>
        <% end %>
  </tr>
  <% end %>
  </tbody>
</table>